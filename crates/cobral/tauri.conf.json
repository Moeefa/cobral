{
  "productName": "Cobral",
  "version": "0.8.1",
  "identifier": "com.cobral.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Cobral",
        "width": 1000,
        "height": 600,
        "visible": false,
        "center": true,
        "zoomHotkeysEnabled": true,
        "transparent": true,
        "windowEffects": {
          "effects": ["acrylic", "sidebar"]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
